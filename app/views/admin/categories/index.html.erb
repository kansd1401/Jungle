<header class="page-header">
<h1>Admin &raquo; All Categories</h1>
</header>

<div class="well">
<%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
</div>
<ul class="list-group">
<% @categories.each do |category| %>
  <li class="list-group-item">
    <span ><%= link_to fa_icon('trash'), [:admin, category], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></span>
    <%= category.name %>
   </li>
<% end %>
</ul>

